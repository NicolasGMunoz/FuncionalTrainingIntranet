<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description"
    content="Buscamos atraer la atención de nuestros clientes a través de experiencias inspiradas en la seducción de los sentidos.">
  <meta name="keywords"
    content="Masajes, Spa, Relax, Descanso, Bienestar, Tratamiento Facial, Tratamiento Corporal, Belleza">
  <title>Funciona Training App</title>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <!-- font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Foundation&display=swap" rel="stylesheet">
  <!--Style-->
  <link rel="stylesheet" href="/css/style.css">

  <style>
  /* Estilos para tabla */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }
  th, td {
    border: 1px solid #000;
    padding: 8px 12px;
    text-align: left;
  }
  th {
    background-color: black;
    color: rgb(254, 199, 1);
  }
  /* Botones */
  .btn-actualizar {
    background-color: rgb(254, 199, 1);
    color: black;
    border: none;
    padding: 6px 12px;
    font-weight: 600;
    cursor: pointer;
    border-radius: 4px;
  }
  .btn-eliminar {
    background-color: #dc3545;
    color: white;
    border: none;
    padding: 6px 12px;
    font-weight: 600;
    cursor: pointer;
    border-radius: 4px;
  }
  /* Inputs en tabla */
  input[type="text"] {
    width: 100%;
    padding: 4px 6px;
    box-sizing: border-box;
  }

  /* Contenedor general */
  section {
    max-width: 600px;
    margin: 2rem auto;
    background: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
    border-radius: 8px;
  }

  /* Título agregar ejercicio */
  .ejerciciosh3 {
    color: rgb(254, 199, 1);
    font-weight: bold;
    margin-bottom: 12px;
  }

  /* Form agregar ejercicio */
  form.agregar-ejercicio-form {
    display: flex;
    gap: 10px;
  }
  form.agregar-ejercicio-form input[type="text"] {
    flex-grow: 1;
  }
  form.agregar-ejercicio-form button {
    background-color: rgb(254, 199, 1);
    color: black;
    border: none;
    padding: 8px 16px;
    font-weight: 700;
    border-radius: 4px;
    cursor: pointer;
  }
</style>
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/assets/funcional.png" width="80" height="50" alt="homefoto"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
                    <% if (user) { %>
    <a class="nav-link" href="/alumnos">Nuevo Alumno</a>
    <a class="nav-link" href="/rutinas">Rutinas</a>
    <a class="nav-link active" href="/ejercicios">Ejercicios</a>
    <form action="/logout" method="GET" style="display:inline;">
      <button class="btnManu">
    <a class="nav-link">Salir</a>
      </button>
    </form>
  <% } else { %>
    <a class="nav-link" href="/login">Ingresar</a>
  <% } %>
      </ul>

      </div>
    </div>
  </nav>



 <section>
  <h3 class="ejerciciosh3">Agregar nuevo ejercicio</h3>
  <form method="POST" action="/ejercicios" class="agregar-ejercicio-form mb-4">
    <input type="text" name="nombre_ejercicio" placeholder="Nombre del ejercicio" required>
    <button type="submit">Crear</button>
  </form>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% ejercicios.forEach(ej => { %>
      <tr>
        <form method="POST" action="/ejercicios/editar">
          <td>
            <input type="text" name="nombre_nuevo" value="<%= ej.Nombre_ejercicio %>" required>
            <input type="hidden" name="nombre_viejo" value="<%= ej.Nombre_ejercicio %>">
          </td>
          <td>
            <button class="btn-actualizar" type="submit">Actualizar</button>
          </td>
        </form>
        <td>
          <form method="POST" action="/ejercicios/delete" style="display:inline;">
            <input type="hidden" name="nombre" value="<%= ej.Nombre_ejercicio %>">
            <button class="btn-eliminar" type="submit">Eliminar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>







  <!-- footer -->
  <footer class="container-fluid">
    <div class="row">
      <div class="col-lg-3 col-md-12 col-sm-12 mt-1 container-fluid">
        <a class="footerText ppo col-md-12 col-sm-12 col-lg-12"
          href="https://miro.com/app/settings/team/3458764596483398883/profile" target="_blank">Developed by
          Pablinka
          Team</a>
      </div>
    </div>
    </div>
  </footer>
  <!-- Mi Js -->
  <script src="/js/index.js"></script>
  <!-- bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/026c9a0387.js" crossorigin="anonymous"></script>
</body>

</html>